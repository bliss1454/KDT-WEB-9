<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/socket.io/socket.io.js"></script>
    <title>Document</title>
</head>
<body>
    <style>
        ul{
            background-color: rgb(86, 189, 229);
            width: 360px;
            height: 550px;
            overflow-y:auto;
            padding: 0px;
            margin: 0;
            position: relative;
        }

        li{
            display: flex;
            padding-left: 5px;
            padding-right: 5px;
            width: 100%;
            justify-content: center;
            box-sizing: border-box;
        }

        li > div{
            border-radius: 3px;
            list-style: none;
            max-width: 200px;
            margin-top: 5px;
        }

        .my_bg{
            justify-content: right;
        }

        .other_bg{
            justify-content: left;
        }

        .my{
            background-color: yellow;
        }

        .other{
            background-color: rgb(212, 255, 255);
        }
    </style>

    <ul></ul>
    <form id="chat">
        <input type="text" id="message" placeholder="채팅내용">
        <button type="submit">전송</button>
        <button type="button" onclick="leave()">나가기</button>
    </form>

    <script>
        // 클라이언트 소켓연결
        const socket = io();
        const ul = document.querySelector("ul");
        const chatForm = document.getElementById("chat");

        const chatRoom = prompt("채팅방 이름을 입력하세요");

        socket.emit('join', chatRoom);

        // 브라우저 접속시
        socket.on('create', (res)=>{
            const li = document.createElement('li');
            // const div = document.createElement('div');
            li.textContent = res;
            ul.append(li);
        })

        chatForm.addEventListener('submit', (e)=>{
            e.preventDefault();
            const msg = chatForm.querySelector("#message");
            socket.emit('message', msg.value);
            msg.value = "";
        })

        socket.on('chat', (res)=>{
            const li = document.createElement('li');
            const div = document.createElement('div');
            li.classList.add("other_bg");
            div.classList.add("other");
            div.textContent = res;
            li.append(div);
            ul.append(li);
        })

        socket.on('chatMe', (res)=>{
            const li = document.createElement('li');
            const div = document.createElement('div');
            li.classList.add("my_bg");
            div.classList.add("my");
            div.textContent = res;
            li.append(div);
            ul.append(li);
        })

    </script>

    <script>
        function leave(){
            socket.emit('leave');
        } 
    </script>
</body>
</html>